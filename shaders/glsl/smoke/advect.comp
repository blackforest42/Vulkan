#version 450

layout (local_size_x = 8, local_size_y = 8, local_size_z = 8) in;

layout (binding = 0) uniform sampler3D inputTex[];
layout (binding = 1) uniform writeonly image3D outputTex[];
layout (binding = 2) uniform sampler3D velocityFieldTex;

void main() {
    ivec3 coord = ivec3(gl_GlobalInvocationID.xyz);
    imageStore(outputTex[0], coord, vec4(coord / 128.f, .5f));
}