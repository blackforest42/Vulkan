#version 450
#extension GL_EXT_nonuniform_qualifier : enable

layout(local_size_x = 8, local_size_y = 8, local_size_z = 8) in;

layout (binding = 0) uniform sampler3D readOnlyTexs[];
layout (binding = 1) uniform writeonly image3D writeOnlyTexs[];

layout(binding = 2) uniform Simparams {
    ivec3 gridSize;
    uint boundaryTypes[6];  // -X, +X, -Y, +Y, -Z, +Z
    uint useNoSlip;         // 0=free-slip, 1=no-slip
} params;

layout (push_constant) uniform PushConsts {
	// Texture index mappings
	// 0 velocity
	// 1 pressure
	// 2 divergence
	// 3 vorticity
	// 4 density
	// 5 temperature
    uint textureIdx;
    int allTextures;
} pushConsts;

const uint BOUNDARY_SOLID = 0;
const uint BOUNDARY_OPEN = 1;

float getFieldSafe(ivec3 coord);
bool isSolid(ivec3 coord);
vec3 getVelocitySafe(ivec3 coord);
void velocityField();
void scalarField(const uint);

void main() {
    ivec3 coord = ivec3(gl_GlobalInvocationID);
    if (!isSolid(coord)) {
        return;
    }

    uint texId = pushConsts.textureIdx;
    if (pushConsts.allTextures == 1) {
        velocityField();
        scalarField(0);
        scalarField(4);
        scalarField(5);
        return;
    }

    if (texId == 0) {
        // velocity
        velocityField();
    }
    else {
        scalarField(texId);
    }
}

bool isSolid(ivec3 coord) {
    if (any(equal(coord, params.gridSize - 1)) || any(equal(coord, ivec3(0)))) {
        return true;
    }
    return false;
}

vec3 getVelocitySafe(ivec3 coord) {
    if (any(equal(coord, params.gridSize - 1)) || any(equal(coord, ivec3(0)))) {
        return vec3(0.0);
    }
    if (isSolid(coord)) return vec3(0.0);
    return texelFetch(readOnlyTexs[0], coord, 0).xyz;
}

float getFieldSafe(uint texId, ivec3 coord) {
    if (any(equal(coord, params.gridSize - 1)) || any(equal(coord, ivec3(0)))) {
        return 0.0;
    }
    if (isSolid(coord)) return 0.0;
    return texelFetch(readOnlyTexs[texId], coord, 0).r;
}

void velocityField() {
    ivec3 coord = ivec3(gl_GlobalInvocationID);
    if (!isSolid(coord)) {
        return;
    }
    
    // Handle interior obstacle cells
    if (isSolid(coord)) {
        imageStore(writeOnlyTexs[0], coord, vec4(0.0));
        return;
    }
    
    vec3 vel = texelFetch(readOnlyTexs[0], coord, 0).xyz;
    
    // Check if on domain boundary
    bool atMinX = (coord.x == 0);
    bool atMaxX = (coord.x == params.gridSize.x - 1);
    bool atMinY = (coord.y == 0);
    bool atMaxY = (coord.y == params.gridSize.y - 1);
    bool atMinZ = (coord.z == 0);
    bool atMaxZ = (coord.z == params.gridSize.z - 1);
    
    // Apply boundary conditions for each face
    if (atMinX && params.boundaryTypes[0] == BOUNDARY_SOLID) {
        vel = params.useNoSlip == 1 ? vec3(0.0) : vec3(0.0, vel.y, vel.z);
    }
    if (atMaxX && params.boundaryTypes[1] == BOUNDARY_SOLID) {
        vel = params.useNoSlip == 1 ? vec3(0.0) : vec3(0.0, vel.y, vel.z);
    }
    if (atMinY && params.boundaryTypes[2] == BOUNDARY_SOLID) {
        vel = params.useNoSlip == 1 ? vec3(0.0) : vec3(vel.x, 0.0, vel.z);
    }
    if (atMaxY && params.boundaryTypes[3] == BOUNDARY_SOLID) {
        vel = params.useNoSlip == 1 ? vec3(0.0) : vec3(vel.x, 0.0, vel.z);
    }
    if (atMinZ && params.boundaryTypes[4] == BOUNDARY_SOLID) {
        vel = params.useNoSlip == 1 ? vec3(0.0) : vec3(vel.x, vel.y, 0.0);
    }
    if (atMaxZ && params.boundaryTypes[5] == BOUNDARY_SOLID) {
        vel = params.useNoSlip == 1 ? vec3(0.0) : vec3(vel.x, vel.y, 0.0);
    }
    
    // Open boundaries: extrapolate from interior
    if (atMinX && params.boundaryTypes[0] == BOUNDARY_OPEN) {
        vel = getVelocitySafe(coord + ivec3(1, 0, 0));
    }
    if (atMaxX && params.boundaryTypes[1] == BOUNDARY_OPEN) {
        vel = getVelocitySafe(coord - ivec3(1, 0, 0));
    }
    if (atMinY && params.boundaryTypes[2] == BOUNDARY_OPEN) {
        vel = getVelocitySafe(coord + ivec3(0, 1, 0));
    }
    if (atMaxY && params.boundaryTypes[3] == BOUNDARY_OPEN) {
        vel = getVelocitySafe(coord - ivec3(0, 1, 0));
    }
    if (atMinZ && params.boundaryTypes[4] == BOUNDARY_OPEN) {
        vel = getVelocitySafe(coord + ivec3(0, 0, 1));
    }
    if (atMaxZ && params.boundaryTypes[5] == BOUNDARY_OPEN) {
        vel = getVelocitySafe(coord - ivec3(0, 0, 1));
    }
    
    // Handle cells adjacent to obstacles
    bool hasObstacleNeighbor = false;
    vec3 normal = vec3(0.0);
    
    if (isSolid(coord - ivec3(1, 0, 0))) {
        normal += vec3(1.0, 0.0, 0.0);
        hasObstacleNeighbor = true;
    }
    if (isSolid(coord + ivec3(1, 0, 0))) {
        normal += vec3(-1.0, 0.0, 0.0);
        hasObstacleNeighbor = true;
    }
    if (isSolid(coord - ivec3(0, 1, 0))) {
        normal += vec3(0.0, 1.0, 0.0);
        hasObstacleNeighbor = true;
    }
    if (isSolid(coord + ivec3(0, 1, 0))) {
        normal += vec3(0.0, -1.0, 0.0);
        hasObstacleNeighbor = true;
    }
    if (isSolid(coord - ivec3(0, 0, 1))) {
        normal += vec3(0.0, 0.0, 1.0);
        hasObstacleNeighbor = true;
    }
    if (isSolid(coord + ivec3(0, 0, 1))) {
        normal += vec3(0.0, 0.0, -1.0);
        hasObstacleNeighbor = true;
    }
    
    if (hasObstacleNeighbor) {
        float len = length(normal);
        if (len > 0.0) {
            normal /= len;
            if (params.useNoSlip == 1) {
                vel = vec3(0.0);
            } else {
                vel = vel - dot(vel, normal) * normal;
            }
        }
    }
    
    imageStore(writeOnlyTexs[0], coord, vec4(vel, 0.0));
}

void scalarField(const uint texId) {
    ivec3 coord = ivec3(gl_GlobalInvocationID);
    if (any(greaterThanEqual(coord, params.gridSize))) return;
    
    // Solid cells have zero scalar value
    if (isSolid(coord)) {
        imageStore(writeOnlyTexs[texId], coord, vec4(0.0));
        return;
    }
    
    float value = texelFetch(readOnlyTexs[texId], coord, 0).r;
    
    // Neumann boundary conditions (zero gradient) for solid boundaries
    if (coord.x == 0 && params.boundaryTypes[0] == BOUNDARY_SOLID) {
        value = getFieldSafe(texId, coord + ivec3(1, 0, 0));
    }
    if (coord.x == params.gridSize.x - 1 && params.boundaryTypes[1] == BOUNDARY_SOLID) {
        value = getFieldSafe(texId, coord - ivec3(1, 0, 0));
    }
    if (coord.y == 0 && params.boundaryTypes[2] == BOUNDARY_SOLID) {
        value = getFieldSafe(texId, coord + ivec3(0, 1, 0));
    }
    if (coord.y == params.gridSize.y - 1 && params.boundaryTypes[3] == BOUNDARY_SOLID) {
        value = getFieldSafe(texId, coord - ivec3(0, 1, 0));
    }
    if (coord.z == 0 && params.boundaryTypes[4] == BOUNDARY_SOLID) {
        value = getFieldSafe(texId, coord + ivec3(0, 0, 1));
    }
    if (coord.z == params.gridSize.z - 1 && params.boundaryTypes[5] == BOUNDARY_SOLID) {
        value = getFieldSafe(texId, coord - ivec3(0, 0, 1));
    }
    
    imageStore(writeOnlyTexs[texId], coord, vec4(value));
}
